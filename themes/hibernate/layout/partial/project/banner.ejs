<%
const project_name = page.project ? site.data.projects[page.project].name : '';
const page_title = page.title ? page.title : page.simple_name.capitalize;
%>

<div class="jumbotron small">
    <div class="ui container">
        <div class="ui grid stackable">
            <div class="column row">
                <div class="column twelve wide middle aligned">
                    <h1>
                        <span><%= project_name %></span>
                    </h1>
                    <h2>
                        <span><%= page_title %></span>
                    </h2>
                </div>
                <div class="column four wide middle aligned">
                    <%- page.project_buttons_partial ? page.project_buttons_partial : partial('partial/project/empty-buttons') %>
                </div>
            </div>
        </div>
    </div>
</div>
